<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="blog-nav" role="navigation">
        <div class="blog-masthead">
            <div class="logo pull-left">
                <img id="img1" src="~/Assets/Images/logo.png" />
            </div>
            <div class="navbar-header" id="navbar">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li >@Html.ActionLink("Home", "Index", "Home")</li>
                    <li >@Html.ActionLink("About", "About", "Home")</li>
                    <li >@Html.ActionLink("Shop", "Index", "CompAssecs")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
               <!-- @Html.Partial("_LoginPartial") -->
               
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <div class="navbar navbar-fixed-bottom">
                <div class="container">

                    <ul id="foot" class="nav navbar-nav">
                        Developed by Jinal, Mansi & Nisarg
                        @Html.ActionLink("Back to home", "Index", "Home")
                        @Html.ActionLink("Contact Us", "Contact", "Home")
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
	 @Scripts.Render("~/bundles/shoppingCart")
    @RenderSection("scripts", required: false)
</body>
</html>
